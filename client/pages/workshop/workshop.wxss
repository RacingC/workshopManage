/* pages/workshop/workshop.wxss */
.workshopBanner{
  width: 100%;
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: solid 2rpx #ddd;
}
.examiner{
  margin-top: 30rpx;
  border-bottom:solid 2rpx #ddd;
  padding-bottom: 5rpx;
}
.timeSelector{
  margin-top: 30rpx;
  border-bottom:solid 2rpx #ddd;
  padding-bottom: 5rpx;
}
.checkTimeTable{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  border-bottom: 200rpx;
  border: solid 2rpx #ddd;
  border-radius: 10rpx;
  width: 90%;
}
.checkTime{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  font-size: 35rpx;
  
  width: 100%;
  margin: 20rpx 0;
}
.checkTimeInfo{
  width:45%;
  text-align:center;
  height:60rpx;
  line-height:25rpx;
}
.checkTimeInfodel{
  width:10%;
  text-align:center;
  height:59rpx;
  line-height:18rpx;
  border:solid 2rpx #ddd;
  border-radius:50rpx;
  margin-right:10rpx;
}
.addCheckTime{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}
.add{
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx 0rpx;
}